@using Entity;
@model List<Director>

@{
    ViewBag.Title = "Lista de Directores";
}

<div class="container bg-warning">
    <h1>Directores de Cine</h1>
    <p>
        <form action="/Home/Create" method="get">
            <button class="btn btn-primary">Agregar Director</button>
        </form>
    </p>
    <div class="bg-success">
        <table class="table table-hover table-bordered table-hover">
            <thead>
                <tr>
                    <td>Codigo</td>
                    <td>Nombre Completo</td>
                    <td>Pais</td>
                    <td>Fecha Nacimiento</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdDirector</td>
                            <td>@item.NombreCompleto</td>
                            <td>@item.Pais</td>
                            <td>@string.Format("{0:d}", item.FchNac)</td>
                            <td>
                                <div class="btn btn-warning">@Html.ActionLink("Editar", "Update", new { id=item.IdDirector})</div>
                                <div class="btn btn-danger">@Html.ActionLink("Eliminar", "Delete", new { id=item.IdDirector})</div>
                                <div class="btn btn-info">@Html.ActionLink("Ver Peliculas", "VerPeliculasPorDirector", new { id=item.IdDirector})</div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>